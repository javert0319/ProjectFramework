<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


        <!--状态栏-->
        <View
                android:id="@+id/view_status"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/movie_colorTheme"
                android:visibility="gone"/>

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/movie_colorTheme"
                app:contentInsetStart="0.0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/movie_ToolbarStyle">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <FrameLayout
                        android:id="@+id/ll_title_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                    <ImageView
                            android:id="@+id/iv_title_menu"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/titlebar_menu"/>
                </FrameLayout>

                <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:theme="@style/movie_AppTheme">

                        <ImageView
                                android:id="@+id/iv_title_one"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/movie_titlebar_music"/>

                        <ImageView
                                android:id="@+id/iv_title_two"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/movie_titlebar_disco"/>

                        <ImageView
                                android:id="@+id/iv_title_three"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/movie_titlebar_friends"/>

                    </LinearLayout>

                </HorizontalScrollView>
                <FrameLayout
                        android:id="@+id/ll_search_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                    <ImageView
                            android:id="@+id/iv_search_menu"
                            android:layout_width="23dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/actionbar_search"/>
                </FrameLayout>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"/>

    </LinearLayout>
</layout>