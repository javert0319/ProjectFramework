<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.app.movie.viewmodel.MovieIsHitViewModel"/>

        <import type="com.lib.frame.view.encapsulation.brvah.binding.BrvahDividerManagers" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MovieInHitActivity">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/include_toolbar"
            layout="@layout/include_toolbar"/>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:is_refreshing="@{vm.isSwipeRefreshing}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:refresh_listener="@{vm.refreshListener}">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                style="@style/RecyclerViewOverScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                app:brvah_adapter="@{vm.bindingAdapter}"
                app:brvah_empty="@{vm.emptyResId}"
                app:brvah_empty_clickListener="@{vm.emptyOnClickListener}"
                app:brvah_header_itemBinding="@{vm.headerBinding}"
                app:brvah_itemBinding="@{vm.itemBinding}"
                app:brvah_items="@{vm.items}"
                app:brvah_loadMoreListener="@{vm.loadMoreListener}"
                app:brvah_load_more_enable="@{vm.loadMoreEnable}"
                app:brvah_load_more_end="@{vm.loadMoreEnd}"
                app:brvah_load_more_success="@{vm.loadMoreSuccess}"
                app:brvah_load_more_view="@{vm.loadMoreView}"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>
