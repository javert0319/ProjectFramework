<resources>

    <style name="movie_AppThemeSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/movie_colorTheme</item>
    </style>
    <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

    <!--设置标题透明度-->
    <style name="movie_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--titleBar样式-->
    <style name="movie_ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/movie_toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/movie_toolbarItemBackground</item>
        <item name="titleTextAppearance">@style/movie_ToolBar.Title</item>
        <item name="subtitleTextStyle">@style/movie_Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--代码设置可以，样式配置没效？-->
    <style name="movie_ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--代码设置可以，样式配置没效？-->
    <style name="movie_Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <!--项目主页的主题,用于解决项目主页标题栏透明-->
    <style name="movie_HomePageTheme" parent="movie_AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--用于项目主页-->
    <style name="movie_CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>
