<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="movie_AppTheme" parent="movie_MyThemeRed" />

    <!-- 网易红为主色调 -->
    <style name="movie_MyThemeRed" parent="Theme.AppCompat.Light.NoActionBar">

        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/movie_colorTheme</item>
        <item name="colorPrimaryDark">@color/movie_colorTheme</item>
        <item name="colorAccent">@color/movie_colorTheme</item>
        <item name="android:windowAnimationStyle">@style/movie_default_animation</item>

        <!--默认状态下页面的背景色-->
        <!--<item name="android:windowBackground">@color/color_page_bg</item>-->
        <!--正常状态下字体颜色和icon颜色-->
        <!--<item name="android:textColorPrimary">@color/colorTheme</item>-->
    </style>

    <!-- 默认Activity跳转动画 -->
    <style name="movie_default_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/movie_activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/movie_activity_up_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/movie_activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/movie_activity_down_out</item>
    </style>

    <!--电影详情页-->
    <style name="movie_ScrollPage" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/movie_colorTheme</item>
        <item name="colorPrimaryDark">@color/movie_colorTheme</item>
        <item name="colorAccent">@color/movie_colorTheme</item>
        <item name="android:windowAnimationStyle">@style/movie_default_animation_down</item>
    </style>

    <!--只有上一页面退出时有动画-->
    <style name="movie_default_animation_down" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation">@anim/movie_activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/movie_activity_down_out</item>
    </style>

    <!--titleBar样式-->
    <style name="movie_ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/movie_toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/movie_toolbarItemBackground</item>
        <item name="titleTextAppearance">@style/movie_ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/movie_Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <!--titlebar 标题-->
    <style name="movie_ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--titlebar 副标题-->
    <style name="movie_Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <style name="movie_AppThemeSystem" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_AppThemeSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>